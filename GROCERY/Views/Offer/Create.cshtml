            if (selectedCatID == item.SUB_CATEGORY_ID)
                options = options + '<option value="' + item.PRODUCT_ID + '">' + item.PRODUCT_DESCRIPTION + '</option>';
        }
        $("#PRODUCT_ID").html(options);
    }

