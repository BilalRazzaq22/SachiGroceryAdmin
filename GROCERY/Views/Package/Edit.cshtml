                        orders.items.push(newItem);
                    }
                    var ordRows = '';

                    //var ele = document.getElementById("txtTotalSum");
                    //var sum = 0;

                    for (i2 = 0; i2 < orders.items.length; i2++) {
                        var oItm = orders.items[i2];
                        //sum = sum + oItm.total;
                        ordRows = ordRows + '<tr><td>' +oItm.product_id + '-' + oItm.barcode + '</td><td>' +
