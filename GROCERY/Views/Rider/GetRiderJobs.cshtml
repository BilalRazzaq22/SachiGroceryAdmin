@model IEnumerable<GROCERY.Models.RiderOrderModel>

@{
    ViewBag.Title = "GetRiderJobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Get Rider Jobs</h2>

<table class="table">
    <tr>
        <th>
            UserName
        </th>
        <th>
            User Type
        </th>
        <th>
            User Active
        </th>
        <th>
            Rider Time In
        </th>
        <th>
           Rider Time Out
        </th>
        <th>
            Is Rider Back
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.USERNAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.USER_TYPE_DESCRIPTION)
            </td>
            <td>
                @if (item.USER_STATUS == true)
                {
                    @Html.LabelForModel("Yes")
                }
                else
                {
                    @Html.LabelForModel("No")
                }
            </td>
            <td>
                @if (item.RIDER_TIME_IN == null || item.RIDER_TIME_IN == "")
                {
                    @Html.LabelForModel("Null")
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.RIDER_TIME_IN)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RIDER_TIME_OUT)
            </td>
            <td>
                @if (item.IS_RIDER_BACK == true)
                {
                    @Html.LabelForModel("Yes")
                }
                else
                {
                    @Html.LabelForModel("No")
                }
            </td>
        </tr>
    }

</table>
