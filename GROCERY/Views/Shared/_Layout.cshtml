                $.ajax({
                    type: "GET",
                    url: '/api/SyncDB/ProductSyncData',
                    contentType: 'application/json',
                    success: function (result) {
                        console.log(result);
                        $("#maindiv").removeClass("disable-maindiv");
                        $("#wait").css("display", "none");
                        alert("Product Sync Complete Successfully");
                    },
                    error: function (res) {
