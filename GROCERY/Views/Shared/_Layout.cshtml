    <script>
        $(document).ready(function () {
            $("#fullSync").click(function () {
                $("#maindiv").addClass("disable-maindiv");
                $("#wait").css("display", "block");
                $.ajax({
                    type: "GET",
                    url: '/api/SyncDB/FullSyncData',
                    contentType: 'application/json',
                    success: function (result) {
                        $("#maindiv").removeClass("disable-maindiv");
                        $("#wait").css("display", "none");
                        alert("Barcode Sync Complete Successfully");
                    },
                    error: function (res) {
                        $("#maindiv").removeClass("disable-maindiv");
                        $("#wait").css("display", "none");
                        alert("Unable to sync check your network");
                    }
                });
            });

            $("#stockSync").click(function () {
                $("#maindiv").addClass("disable-maindiv");
                $("#wait").css("display", "block");
                $.ajax({
                    type: "GET",
                    url: '/api/SyncDB/StockSyncData',
